<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="900.0" prefWidth="800.0" spacing="20.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.grafy.PrimaryController">
   <children>
      <Pane onMouseClicked="#handleChooseFileButton" prefHeight="200.0" prefWidth="200.0" />
      <Pane prefHeight="205.0" prefWidth="760.0">
         <children>
            <Label fx:id="gridSizeLabel" alignment="CENTER_RIGHT" layoutX="132.0" layoutY="47.0" prefHeight="25.0" prefWidth="100.0" text="Grid size:" />
            <TextField fx:id="gridSizeInputTextField" layoutX="242.0" layoutY="47.0" prefHeight="25.0" prefWidth="100.0" />
            <Label alignment="CENTER" layoutX="342.0" layoutY="46.0" prefHeight="54.0" prefWidth="70.0" text="OR" />
            <Button fx:id="chooseFileButton" layoutX="412.0" layoutY="47.0" mnemonicParsing="false" onMouseClicked="#handleChooseFileButton" prefHeight="25.0" prefWidth="100.0" text="Choose file" />
            <Label fx:id="weightRangeLabel" alignment="CENTER_RIGHT" layoutX="111.0" layoutY="75.0" prefHeight="25.0" prefWidth="121.0" text="Edge weight range:" />
            <TextField fx:id="weightRangeInputTextField" layoutX="242.0" layoutY="75.0" prefHeight="25.0" prefWidth="100.0" />
            <TextField fx:id="fileNameTextField" layoutX="412.0" layoutY="75.0" prefHeight="25.0" prefWidth="100.0" />
            <Button fx:id="generateButton" layoutX="242.0" layoutY="114.0" mnemonicParsing="false" onMouseClicked="#generateButtonPressed" prefHeight="25.0" prefWidth="100.0" text="Generate" />
            <Label layoutX="138.0" prefHeight="37.0" prefWidth="498.0" text="Generate graph or choose file to read from">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <Button fx:id="generateFromFileButton" layoutX="412.0" layoutY="114.0" mnemonicParsing="false" onMouseClicked="#generateFromFileButtonPressed" prefHeight="25.0" prefWidth="100.0" text="Generate" />
         </children>
      </Pane>
      <Button fx:id="primaryButton" onAction="#switchToSecondary" text="Switch to Secondary View" />
      <AnchorPane prefHeight="200.0" prefWidth="200.0" />
   </children>
   <padding>
      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
   </padding>
</VBox>
